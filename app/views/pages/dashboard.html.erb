<div class="row">
  <h1 class="text-center">Dashboard</h1>
  <div class="col-md-4">
    <h3>
      Books <%= link_to "New Book", new_book_path, class: "btn btn-primary btn-sm pull-right" %>
    </h3>

    <div class="bs-example" data-example-id="condensed-table">
      <table class="table table-condensed">
        <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Available</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>
          <th><%= book.id %></th>
          <td><%= link_to book.name, book_path(book) %></td>
          <td><%= book.availability %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
  <div class="col-md-4">
    <h3>
      Purchased
    </h3>
  </div>
  <div class="col-md-4">
    <h3>
      Sales
    </h3>
  </div>
</div>