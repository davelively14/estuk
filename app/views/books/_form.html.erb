<%= simple_form_for(@book, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>


  <%= f.input :name, required: true, label: false, placeholder: "Book Name", input_html: {class: "form-control"} %>
  <%= f.input :author, required: true, label: false, placeholder: "Author's Name", input_html: {class: "form-control"}  %>
  <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: {class: "form-control", rows: 5}  %>
  <%= f.input :price, required: true, label: false, placeholder: "Price in cents", input_html: {class: "form-control"}  %>
  <%= f.input :image %>
  <%= f.input :resource %>

  <div class="checkbox text-center">
    <label>
      <p>Available for purchase?</p>
        <%= f.input :availability, label: false %>
    </label>
  </div>

  <%= f.button :submit, class: "btn btn-primary btn-block" %>

<% end %>
